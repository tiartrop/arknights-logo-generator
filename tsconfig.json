{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "lib": ["ES2016", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "module": "NodeNext",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["vite/client"],
    "skipLibCheck": true

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**"
  ]
}
